<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="create-domain-table" author="igor">

        <preConditions>
            <not>
                <tableExists tableName="domain"/>
            </not>
        </preConditions>

        <createTable tableName="domain">
            <column name="domainname" type="VARCHAR(32)" >
                <constraints primaryKey="true"/>
            </column>
            <column name="hotness" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="x_value" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="yandex_tic" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="links" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="visitors" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="registrar" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="old" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="delete_date" type="DATE">
                <constraints unique="true" nullable="true"/>
            </column>
            <column name="rkn" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="judicial" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="block" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="user_chat_id" type="BIGINT">
            <constraints  nullable="true"/>
            </column>
        </createTable>
    <addForeignKeyConstraint baseTableName="domain" baseColumnNames="user_chat_id" constraintName="domain_user_users_chat_Id" referencedTableName="users"
                             referencedColumnNames="chat_id" onUpdate="CASCADE"/>

    </changeSet>

</databaseChangeLog>